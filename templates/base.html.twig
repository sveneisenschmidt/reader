<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#fff" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#0d1117" media="(prefers-color-scheme: dark)">
    <title>{% block title %}Reader{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body{% block body_class %}{% endblock %}>
    <input type="checkbox" id="menu-toggle" class="menu-checkbox">
    <header>
        <label for="menu-toggle" class="menu-toggle">Menu</label>
        <h1><a href="{{ path_with_filters('feed_index') }}" class="home">Reader</a></h1>
        <nav>
            <a href="{{ path_with_filters('subscriptions') }}">Subscriptions</a>
        </nav>
    </header>

    <main>
        {% block main %}{% endblock %}
    </main>

    <footer>
        {% set refreshTime = last_refresh() %}
        {% if refreshTime %}
        <form action="{{ path('feed_refresh') }}" method="post" class="inline" data-refresh-form>
            <input type="hidden" name="_token" value="{{ csrf_token('refresh') }}">
            <button type="submit">Refreshed {{ refreshTime|ago }}</button>
        </form>
        {% endif %}
    </footer>

    {% block scripts %}{% endblock %}
    <script src="{{ asset('js/refresh.js') }}"></script>
    <script src="{{ asset('js/pull-to-refresh.js') }}"></script>
</body>
</html>
