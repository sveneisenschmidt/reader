<!DOCTYPE html>
<html lang="en" data-theme="{{ app.user ? app.user.theme : 'auto' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#fff" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#0d1117" media="(prefers-color-scheme: dark)">
    <title>{% block title %}Reader{% endblock %}</title>
    <link rel="preload" href="{{ asset('css/shared-base.css') }}" as="style">
    {% block preload %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('css/shared-base.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body{% block body_class %}{% endblock %}>
    {% block menu_toggle %}{% endblock %}
    <header>
        <h1><a href="{{ path_with_filters('feed_index') }}" class="home">Reader</a></h1>
        <nav>
            {% block menu_link %}
                <a href="{{ path_with_filters('feed_index') }}" class="feeds-link">Feeds</a>
            {% endblock %}
            <a href="{{ path_with_filters('subscriptions') }}"{% if app.request.attributes.get('_route') == 'subscriptions' %} class="active"{% endif %}>Subscriptions</a>
            <a href="{{ path_with_filters('preferences') }}"{% if app.request.attributes.get('_route') == 'preferences' %} class="active"{% endif %} title="Preferences">â›­</a>
        </nav>
    </header>

    <main id="{% block page_id %}{% endblock %}"{% block page_class %}{% endblock %}>
        {% block main %}{% endblock %}
    </main>

    <footer>
        <span class="status-indicator {{ status_is_active() ? 'status-active' : 'status-inactive' }}"></span>
        {% set refreshTime = last_refresh() %}
        {% if refreshTime %}
        <form action="{{ path_with_filters('feed_refresh') }}" method="post" class="inline" data-refresh-form>
            <input type="hidden" name="_token" value="{{ csrf_token('refresh') }}">
            <button type="submit" class="btn-link">Refreshed {{ refreshTime|ago }}</button>
        </form>
        {% else %}
        &nbsp;
        {% endif %}
    </footer>

    {% block scripts %}{% endblock %}
    <script src="{{ asset('js/refresh.js') }}"></script>
    <script>document.activeElement?.blur();</script>
</body>
</html>
