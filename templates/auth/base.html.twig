<!DOCTYPE html>
<html lang="en" data-theme="auto">
<head>
    {% include '_head.html.twig' %}
    <title>{% block title %}Reader{% endblock %}</title>
    <link rel="preload" href="{{ asset('css/shared-layout.css') }}" as="style">
    <link rel="preload" href="{{ asset('css/shared-forms.css') }}" as="style">
    <link rel="preload" href="{{ asset('css/page-auth.css') }}" as="style">
    <link rel="stylesheet" href="{{ asset('css/shared-layout.css') }}">
    <link rel="stylesheet" href="{{ asset('css/shared-forms.css') }}">
    <link rel="stylesheet" href="{{ asset('css/page-auth.css') }}">
    {% block scripts %}{% endblock %}
</head>
<body>
    <header>
        <h1>Reader</h1>
    </header>

    <main id="{% block page_id %}{% endblock %}" class="page-container">
        <p>{% block intro %}{% endblock %}</p>

        {% if error is defined and error %}
        <p role="alert">{{ error }}</p>
        {% endif %}

        {% block form %}{% endblock %}
    </main>

    <script>
    document.body.focus();
    document.activeElement?.blur();
</script>
</body>
</html>
