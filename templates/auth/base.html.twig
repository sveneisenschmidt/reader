<!DOCTYPE html>
<html lang="en" data-theme="auto">
<head>
    {% include '_head.html.twig' %}
    <title>{% block title %}Reader{% endblock %}</title>
    <style>
        {{ asset_inline('css/shared-layout.css') }}
        {{ asset_inline('css/shared-forms.css') }}
        {{ asset_inline('css/page-auth.css') }}
    </style>
    {% block scripts %}{% endblock %}
</head>
<body>
    <header>
        <h1>Reader</h1>
        <nav class="header-actions">
            <span>{% block header_actions %}{% endblock %}</span>
        </nav>
    </header>

    <main id="{% block page_id %}{% endblock %}" class="page-container">
        <p>{% block intro %}{% endblock %}</p>

        {% if error is defined and error %}
        <p role="alert">{{ error }}</p>
        {% endif %}

        {% block form %}{% endblock %}
    </main>

    <script>{{ asset_inline('js/global.js') }}</script>
</body>
</html>
