{% extends 'base.html.twig' %}

{% block title %}Status | Reader{% endblock %}

{% block stylesheets %}
    <style>
        {{ asset_inline('css/shared-layout.css') }}
        {{ asset_inline('css/shared-forms.css') }}
        {{ asset_inline('css/page-status.css') }}
    </style>
{% endblock %}

{% block header_actions %}
    <span>Status</span>
{% endblock %}

{% block page_id %}status{% endblock %}

{% block page_class %} class="page-container"{% endblock %}

{% block main %}

    <section class="page-section">
        <h2>Status</h2>
        <p>
            {% if workerAlive %}
                <span class="status-online">●</span> Worker online ({{ workerLastBeat|ago }})
            {% elseif workerLastBeat %}
                <span class="status-offline">●</span> Worker offline ({{ workerLastBeat|ago }})
            {% else %}
                <span class="status-offline">●</span> Worker offline
            {% endif %}
        </p>
        <p>
            {% if webhookAlive %}
                <span class="status-online">●</span> Webhook online ({{ webhookLastBeat|ago }})
            {% elseif webhookLastBeat %}
                <span class="status-offline">●</span> Webhook offline ({{ webhookLastBeat|ago }})
            {% else %}
                <span class="status-offline">●</span> Webhook offline
            {% endif %}
        </p>
    </section>

    <section class="page-section">
        <h2>Subscriptions ({{ totals.subscriptions }})</h2>
        <table class="status-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Last Refresh</th>
                    <th>Duration</th>
                    <th>Items</th>
                    <th>Read</th>
                    <th>Seen</th>
                </tr>
            </thead>
            <tbody>
                {% for sub in subscriptions %}
                <tr>
                    <td>{{ sub.name }}</td>
                    <td>
                        {% if sub.status == 'success' %}
                            <span class="status-online">●</span>
                        {% elseif sub.status == 'pending' %}
                            <span class="status-pending">●</span>
                        {% else %}
                            <span class="status-offline">●</span>
                        {% endif %}
                        {{ sub.status }}
                    </td>
                    <td>{{ sub.lastRefreshedAt ? sub.lastRefreshedAt|ago : 'Never' }}</td>
                    <td>{{ sub.lastRefreshDuration ? (sub.lastRefreshDuration / 1000)|number_format(1) ~ 's' : '-' }}</td>
                    <td>{{ sub.itemCount }}</td>
                    <td>{{ sub.readCount }}/{{ sub.unreadCount }}</td>
                    <td>{{ sub.seenCount }}/{{ sub.unseenCount }}</td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">No subscriptions yet.</td>
                </tr>
                {% endfor %}
            </tbody>
            {% if subscriptions|length > 0 %}
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th></th>
                    <th></th>
                    <th>{{ totals.refreshDuration ? (totals.refreshDuration / 1000)|number_format(1) ~ 's' : '-' }}</th>
                    <th>{{ totals.items }}</th>
                    <th>{{ totals.read }}/{{ totals.unread }}</th>
                    <th>{{ totals.seen }}/{{ totals.unseen }}</th>
                </tr>
            </tfoot>
            {% endif %}
        </table>
    </section>

    <section class="page-section">
        <h2>Processed Messages</h2>
        <table class="status-table">
            <thead>
                <tr>
                    <th>Message Type</th>
                    <th>Source</th>
                    <th>Count</th>
                    <th>Last Processed</th>
                </tr>
            </thead>
            <tbody>
                {% for type, sources in messageCountsBySource %}
                    {% for source, data in sources %}
                <tr>
                    <td>{{ type|split('\\')|last }}</td>
                    <td>{{ source|default('-') }}</td>
                    <td>{{ data.count }}</td>
                    <td>{{ data.lastProcessedAt|ago }}</td>
                </tr>
                    {% endfor %}
                {% else %}
                <tr>
                    <td colspan="4">No processed messages yet.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock %}
